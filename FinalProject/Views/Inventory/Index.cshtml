@model IEnumerable<FinalProject.Models.Inventory>

@{
    ViewData["Title"] = "Inventory List";
}

<h2>Inventory List</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Add New Item</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Item Name</th>
            <th>Amount Sold</th>
            <th>Total Price</th>
            <th>Date Sold</th>
            <th>Item Type</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="5" class="text-center">No data yet.</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.ItemName</td>
                    <td>@item.AmountSold</td>
                    <td>@item.TotalPrice</td>
                    <td>@item.DateSold.ToShortDateString()</td>
                    <td>@item.ItemType</td>
                </tr>
            }
        }
    </tbody>
</table>
