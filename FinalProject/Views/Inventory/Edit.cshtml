@model FinalProject.Models.Entities.Inventory

@{
    ViewData["Title"] = "Edit Item";
}

<!-- Main container -->
<div class="container">

    <!-- Title -->
    <h2 class="text-center mb-4" style="color: #594100">Edit Item</h2>

    @if (Model is null)
    {
        <!-- Displayed when no item is found for the given Id -->
        <p> No items were found with this Id.</p>
    }
    else
    {

        <!-- Item was found, and display form for updating or deleting inventory item -->
        <form method="post">

            <!-- First row: ID and item name inputs -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label"> Id </label>
                    <input asp-for="Id" class="form-control" readonly style="border: 2px solid #594100;"/>
                </div>
                <div class="col-md-6">
                    <label class="form-label"> Item Name </label>
                    <input asp-for="ItemName" class="form-control" style="border: 2px solid #594100;"/>
                </div>
            </div>

            <!-- Second row: amount sold and total price inputs -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label"> Amount Sold</label>
                    <input asp-for="AmountSold" class="form-control" type="number" style="border: 2px solid #594100;"/>
                </div>
                <div class="col-md-6">
                    <label class="form-label"> Total Price </label>
                    <input asp-for="TotalPrice" class="form-control" type="number" step="0.01" style="border: 2px solid #594100;"/>
                </div>
            </div>

            <!-- Third row: date sold and item type inputs -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label"> Date Sold </label>
                    <input asp-for="DateSold" class="form-control" type="date" style="border: 2px solid #594100;"/>
                </div>
                <div class="col-md-6">
                    <label class="form-label"> Item Type</label>
                    <input asp-for="ItemType" class="form-control" style="border: 2px solid #594100;"/>
                </div>
            </div>

            <!-- Fourth row: save and delete buttons, and back icon -->
            <div class="row">
                <div class=" col-md-6 offset-md-6 d-flex justify-content-end">
                    <a asp-action="Index" class="btn font-size: 1.5rem;" title="Back to List"><i class="bi bi-backspace fs-4"></i></a>
                    <button type="submit" class="btn fw-bold me-2" asp-action="Delete" asp-asp-controller="Inventory" style="background-color: #C83F12; color: #FAD59A;"
                        onmouseover="this.style.backgroundColor='#E9A319'"
                        onmouseout="this.style.backgroundColor='#C83F12'">
                        Delete
                    </button>
                    <button type="submit" class="btn fw-bold" style="background-color: #DCA06D; color: #594100;"
                        onmouseover="this.style.backgroundColor='#E9A319'"
                        onmouseout="this.style.backgroundColor='#DCA06D'">
                        Save
                    </button>
                </div>
            </div>

        </form>
    }
</div>