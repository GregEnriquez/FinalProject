@model FinalProject.Models.Entities.Inventory

@{
    ViewData["Title"] = "Edit Item";
}

<h2>Edit Item</h2>

@if (Model is null)
{
    <p> No items were found with this Id.</p>
}
else
{
    <form method="post">
        <div class="mb-3">
            <label class="form-label"> Id </label>
            <input asp-for="Id" class="form-control" readonly />
        </div>
        <div class="mb-3">
            <label class="form-label"> Item Name </label>
            <input asp-for="ItemName" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label"> Amount Sold</label>
            <input asp-for="AmountSold" class="form-control" type="number" />
        </div>
        <div class="mb-3">
            <label class="form-label"> Total Price </label>
            <input asp-for="TotalPrice" class="form-control" type="number" step="0.01" />
        </div>
        <div class="mb-3">
            <label class="form-label"> Date Sold </label>
            <input asp-for="DateSold" class="form-control" type="date" />
        </div>
        <div class="mb-3">
            <label class="form-label"> Item Type</label>
            <input asp-for="ItemType" class="form-control" />
        </div>
        <button type="submit" class="btn btn-success">Save</button>
        <a asp-action="Index" class="btn btn-danger">Cancel</a>
    </form>
}