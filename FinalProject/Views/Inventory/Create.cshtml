@model FinalProject.Models.Inventory

@{
    ViewData["Title"] = "Add New Item";
}

<h2>Add New Item</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="ItemName" class="form-label"></label>
        <input asp-for="ItemName" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="AmountSold" class="form-label"></label>
        <input asp-for="AmountSold" class="form-control" type="number" />
    </div>
    <div class="mb-3">
        <label asp-for="TotalPrice" class="form-label"></label>
        <input asp-for="TotalPrice" class="form-control" type="number" step="0.01" />
    </div>
    <div class="mb-3">
        <label asp-for="DateSold" class="form-label"></label>
        <input asp-for="DateSold" class="form-control" type="date" />
    </div>
    <div class="mb-3">
        <label asp-for="ItemType" class="form-label"></label>
        <input asp-for="ItemType" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-danger">Cancel</a>
</form>
